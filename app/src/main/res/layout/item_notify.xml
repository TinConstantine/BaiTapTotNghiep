<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ic_title"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_user"
        android:layout_height="wrap_content"
        app:tint="@color/black" />
    <ImageView
        android:id="@+id/imgOpenDialog"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_dot"
        android:layout_height="wrap_content"
        app:tint="@color/black" />
    <LinearLayout
        android:id="@+id/content_notify"
        android:layout_toEndOf="@+id/ic_title"
        android:layout_marginStart="4dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Bài viết mới"
            />
        <TextView
            android:id="@+id/txtContentNotify"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=", Bạn đọc Admin gửi bài viết với tiêu đề, Bạn đọc Admin gửi bài viết với tiêu đề, Bạn đọc Admin gửi bài viết với tiêu đề"
            />
    </LinearLayout>


</RelativeLayout>