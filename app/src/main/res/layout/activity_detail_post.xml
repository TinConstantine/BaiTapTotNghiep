<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".page.HomePage.DetailPost">
    <Toolbar
        android:id="@+id/toolBarDetailPost"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:layout_height="72dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/imgDetailPostBack"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:layout_marginTop="28dp"
                android:layout_alignParentStart="true"
                android:contentDescription="TODO"
                android:src="@drawable/ic_back"
                android:background="@android:color/transparent"/>

            <TextView
                android:id="@+id/toolBarTitleDetailCategory"
                android:paddingTop="36dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="Chi tiáº¿t"/>
            
        </RelativeLayout>


    </Toolbar>
    <TextView
        android:layout_below="@id/toolBarDetailPost"
        android:id="@+id/txtTitleDetailPost"
        android:padding="12dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <WebView
        android:layout_below="@+id/txtTitleDetailPost"
        android:padding="12dp"
        android:id="@+id/wvContentDetailPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>